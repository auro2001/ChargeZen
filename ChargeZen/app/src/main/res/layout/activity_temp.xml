<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tempActivity"
    android:background="@drawable/ic_app_login_bg">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/plgani"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="112dp"
        app:layout_constraintBottom_toTopOf="@+id/perctxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.628"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/temperature" />

    <TextView
        android:id="@+id/perctxt"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="448dp"
        android:gravity="center"
        android:text="Temperature"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/updatetemp"
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="64dp"
        android:background="@color/BlueViolet"
        android:text="Update"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempstat"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tempstat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="43"
        android:textColor="@color/DarkGreen"

        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perctxt" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="49dp"
        android:layout_height="38dp"
        android:text="c"
        android:textColor="@color/DarkGreen"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/updatetemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/tempstat"
        app:layout_constraintTop_toBottomOf="@+id/perctxt"
        app:layout_constraintVertical_bias="0.223" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="360dp"
        android:layout_height="159dp"
        android:text="Note: Safe usage and storage temperature for the lithium battery in a cell phone is –20°C to 60°C (–4°F to 140°F). (32°F to 113°F). Anything outside of these ranges will decrease the battery usable life"
        android:textColor="@color/Beige"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/plgani"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

</androidx.constraintlayout.widget.ConstraintLayout>